{
  "ConnectionStrings": {
    "Database": "Server=localhost;Database=<Database>;User Id=<User Id>;Password=<Password>;TrustServerCertificate=True;",
    "Redis": "localhost:6379",
    "Hangfire": "Server=localhost;Database=<Database>;User Id=<User Id>;Password=<Password>;TrustServerCertificate=True;"
  },
  "RabbitMQ": {
    "Host": "amqp://localhost:5672/",
    "Username": "<RABBITMQ_USERNAME>",
    "Password": "<RABBITMQ_PASSWORD>"
  },
  "OAuth2": {
    "SigningCertificate": {
      "Source": "store",
      "StoreName": "My",
      "StoreLocation": "LocalMachine",
      "Thumbprint": "<SIGNING_CERT_THUMBPRINT>"
    },
    "EncryptionCertificate": {
      "Source": "store",
      "StoreName": "My",
      "StoreLocation": "LocalMachine",
      "Thumbprint": "<ENCRYPTION_CERT_THUMBPRINT>"
    }
  },
  "SeedData": {
    "AdminUser": {
      "Username": "<ADMIN_USERNAME>",
      "Password": "<ADMIN_PASSWORD>"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Logs/log-development-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Collateral Appraisal System",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*",
  "TimeZone": {
    "DefaultTimeZone": "UTC",
    "ForceUtc": true,
    "Culture": "en-US",
    "DateFormat": "yyyy-MM-dd",
    "TimeFormat": "HH:mm:ss",
    "DateTimeFormat": "yyyy-MM-dd HH:mm:ss"
  },
  "FileStorage": {
    "RootPath": "uploads",
    "TempPath": "temp",
    "DocumentsPath": "documents",
    "ArchivePath": "archive",
    "DeletedPath": "deleted",
    "MaxFileSizeBytes": 52428800,
    "MaxFilesPerSession": 20,
    "MaxTotalSessionSizeBytes": 209715200,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx"
    ],
    "ImageVariants": {
      "GenerateThumbnails": true,
      "Sizes": {
        "Small": {
          "Width": 150,
          "Height": 150
        },
        "Medium": {
          "Width": 300,
          "Height": 300
        },
        "Large": {
          "Width": 800,
          "Height": 600
        }
      }
    },
    "Cleanup": {
      "TempSessionExpirationHours": 24,
      "DeletedRetentionDays": 30,
      "OrphanedCheckDays": 7
    },
    "Archive": {
      "ArchiveAfterDays": 365,
      "AutoArchiveEnabled": true
    }
  }
}
